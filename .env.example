# TEMPLATE DE VARIÁVEIS DE AMBIENTE - MB-BOT
# 
# INSTRUÇÕES:
# 1. Copie este arquivo e renomeie para .env
# 2. Preenchha com seus valores reais
# 3. NUNCA commit este arquivo com valores reais!
# 4. Para Render: Use o painel de Environment Variables
# ═══════════════════════════════════════════════════════════════════════════════

# CREDENCIAIS & API (⚠️ VALORES SENSÍVEIS - NÃO COMPARTILHE)
API_KEY=seu_api_key_aqui
API_SECRET=seu_api_secret_aqui

# MODO DE OPERAÇÃO
SIMULATE=false
USE_CASH_MANAGEMENT=true
USE_SWING_TRADING=false
ADAPTIVE_STRATEGY=true
ADAPTIVE_MARKET_MANAGER=true

# CONFIGURAÇÃO DE PAR E CICLO
PAIR=BTC-BRL
CYCLE_SEC=30
PORT=3001

# ESTRATÉGIA DE MARKET MAKING
SPREAD_PCT=0.035
MIN_SPREAD_PCT=0.020
MAX_SPREAD_PCT=0.050

# TAMANHO DE ORDEM
ORDER_SIZE=0.00005
MIN_ORDER_SIZE=0.00002
MAX_ORDER_SIZE=0.0001

# POSIÇÃO E INVENTORY
MAX_POSITION=0.0005
INVENTORY_THRESHOLD=0.0001
BIAS_FACTOR=0.0002

# STOP-LOSS & TAKE-PROFIT
STOP_LOSS_PCT=0.015
TAKE_PROFIT_PCT=0.025

# VOLATILIDADE
MIN_VOLATILITY_PCT=0.05
MAX_VOLATILITY_PCT=5.0
VOL_LIMIT_PCT=4.0

# TIMING
MIN_ORDER_CYCLES=5
MAX_ORDER_AGE=600
HISTORICAL_FILLS_WINDOW=50

# VALIDAÇÃO
MOMENTUM_VALIDATION=true
SELL_FIRST=true
EXPECTED_PROFIT_THRESHOLD=0.0005
MIN_VOLUME=0.00003

# DRIFT DE PREÇO
PRICE_DRIFT_PCT=0.0001
PRICE_DRIFT_BOOST_PCT=0.00005

# RECENCY WEIGHT
RECENT_WEIGHT_FACTOR=0.9

# ALERTAS
ALERT_PNL_THRESHOLD=-5
ALERT_ROI_THRESHOLD=-5
DAILY_LOSS_LIMIT=20

# DEBUG
DEBUG=true
NODE_ENV=development

# ═══════════════════════════════════════════════════════════════════════════════
