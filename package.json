{
  "name": "mb-bot",
  "version": "1.0.0",
  "description": "Market-making bot framework for Mercado Bitcoin - simulation, backtesting, dashboard, and production trading",
  "main": "bot.js",
  "scripts": {
    "start": "concurrently --kill-others \"npm:live\" \"npm:dashboard\"",
    "simulate": "SIMULATE=true node bot.js",
    "live": "SIMULATE=false node bot.js",
    "live:log": "SIMULATE=false node bot.js >> exec-live.log 2>&1",
    "dashboard": "node dashboard.js",
    "dashboard:log": "node dashboard.js >> exec-dashboard.log 2>&1",
    "dev": "concurrently --kill-others \"npm:simulate\" \"npm:dashboard\"",
    "backtest": "node backtester.js",
    "backtest:sample": "node backtester.js ./data/sample_candles.csv",
    "stats": "node -e \"require('./db').getStats({hours:24}).then(console.log)\"",
    "stats:live": "node -e \"require('./db').getStats({hours:1}).then(console.log)\"",
    "validate-pnl": "node -e \"require('./mb_client').getTicker().then(t => require('./db').validatePnL(t.last).then(console.log))\"",
    "orders": "node -e \"require('./db').getOrders({limit:20}).then(console.log)\"",
    "clean": "npm run clean:db && npm run clean:cache",
    "clean:db": "rm -f database/*.db && echo '✅ Database cleaned'",
    "clean:cache": "rm -rf node_modules/.cache && echo '✅ Cache cleaned'",
    "test": "npm run test-client && npm run stats",
    "test-client": "node test-client.js",
    "test-pnl": "node test_pnl_validation.js",
    "test-trading": "node test_trading_validation.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "migrate": "node migrate.js",
    "migrate:up": "node migrate.js up",
    "migrate:down": "node migrate.js down",
    "watch": "nodemon bot.js",
    "debug": "DEBUG=true SIMULATE=true node --inspect bot.js",
    "profile": "node --prof bot.js",
    "logs": "tail -f exec-live.log exec-dashboard.log 2>/dev/null || echo 'No log files found'",
    "setup": "npm install && npm run migrate && echo '✅ Setup complete!'",
    "test:live": "node test_live_complete.js",
    "test:live:full": "npm run test:live -- --full",
    "test:conviction": "node test_confidence_system.js",
    "test:analyzer": "node conviction_analyzer.js",
    "test:examples": "node exemplos_conviccao.js"
  },
  "bin": {
    "mb-bot": "bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mb-bot.git"
  },
  "keywords": [
    "market-making",
    "trading-bot",
    "cryptocurrency",
    "algorithmic-trading",
    "mercadobitcoin",
    "bitcoin",
    "brazil"
  ],
  "author": "MB Bot Team <team@mb-bot.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cheerio": "^1.1.2",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "supertest": "^6.3.4",
    "tailwindcss": "^4.1.14"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "files": [
    "bin/",
    "src/",
    "public/",
    "data/",
    "database/",
    "*.js",
    "!.env*",
    "!*.log",
    "!test*"
  ],
  "bugs": {
    "url": "https://github.com/yourusername/mb-bot/issues"
  },
  "homepage": "https://github.com/yourusername/mb-bot#readme"
}
