# Configuração Otimizada para Máximo Lucro - MB Bot
# Baseado na análise dos indicadores atuais (RSI: 15.53, Volatilidade baixa 0.45%)

# ========== MODO OPERAÇÃO ==========
SIMULATE=false
PAIR=BTC-BRL
CYCLE_SEC=10

# ========== SPREADS OTIMIZADOS ==========
# Spread reduzido para capturar mais oportunidades com volatilidade baixa
SPREAD_PCT=0.0004
MIN_SPREAD_PCT=0.0003
MAX_SPREAD_PCT=0.0008

# ========== TAMANHOS DE ORDEM OTIMIZADOS ==========
# Aumentado o tamanho das ordens para mais lucro por transação
ORDER_SIZE=0.08
MIN_ORDER_SIZE=0.0002
MAX_ORDER_SIZE=0.0006

# ========== GESTÃO DE POSIÇÃO AGRESSIVA ==========
# Permite posição maior para aproveitar oportunidades
MAX_POSITION=0.0005
INVENTORY_THRESHOLD=0.0003
BIAS_FACTOR=0.0002

# ========== LUCRO ESPERADO REDUZIDO ==========
# Com RSI baixo (15.53), esperar menos lucro por operação para mais fills
EXPECTED_PROFIT_THRESHOLD=0.0003

# ========== STOP LOSS E TAKE PROFIT OTIMIZADOS ==========
# Stop loss mais conservador, take profit mais agressivo
STOP_LOSS_PCT=0.006
TAKE_PROFIT_PCT=0.0008

# ========== VIÉS DE MERCADO PARA RSI BAIXO ==========
# Com RSI 15.53 (oversold), favorece compras
PRICE_DRIFT_PCT=0.0002
PRICE_DRIFT_BOOST_PCT=0.0001

# ========== VOLATILIDADE ADAPTATIVA ==========
MIN_VOLATILITY_PCT=0.08
MAX_VOLATILITY_PCT=3.0
VOL_LIMIT_PCT=2.0

# ========== ORDENS MAIS ATIVAS ==========
# Reduzido tempo de vida das ordens para reprecificar mais frequentemente
MIN_ORDER_CYCLES=1
MAX_ORDER_AGE=60

# ========== ANÁLISE HISTÓRICA MELHORADA ==========
HISTORICAL_FILLS_WINDOW=30
RECENT_WEIGHT_FACTOR=0.8

# ========== ALERTAS AJUSTADOS ==========
ALERT_PNL_THRESHOLD=-30
ALERT_ROI_THRESHOLD=-3
DAILY_LOSS_LIMIT=15

# ========== VOLUME MÍNIMO REDUZIDO ==========
# Para capturar micro-oportunidades
MIN_VOLUME=0.00003